<% content_for :body do %>


<div class="form-wrapper">
  <h1>Sign Up</h1>
  <form action="/signup" method="post">
    <div class="form-item">
      <label for="name"></label>
      <input type="text" name="name" required="required" placeholder="Name"></input>
    </div>
    <div class="form-item">
      <label for="password"></label>
      <input type="password" name="password" required="required" placeholder="Password"></input>
    </div>
    <div class="form-item">
      <label for="password"></label>
      <input type="password" name="password_confirmation" required="required" placeholder="Passwordの確認"></input>
    </div>
    <div class="button-panel">
      <input type="submit" class="button" title="Sign Up" value="Sign Up"></input>
    </div>
  </form>
  <div class="form-footer">
    <p><a href="/signup">Create an account</a></p>
  </div>
</div>
